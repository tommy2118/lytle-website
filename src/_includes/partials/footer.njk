<footer class="bg-forest text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {# Company Info #}
      <div>
        <h3 class="text-xl font-bold mb-4">{{ site.name }}</h3>
        <p class="text-spring mb-2">{{ site.subtitle }}</p>
        <p class="text-gray-300 text-sm">
          Licensed and insured (Lic #{{ site.license }})
        </p>
      </div>

      {# Services #}
      <div>
        <h3 class="text-xl font-bold mb-4">Services</h3>
        <ul class="space-y-2">
          {% for service in navigation.services %}
          <li>
            <a href="{{ service.url }}" class="text-gray-300 hover:text-spring transition-colors">
              {{ service.label }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>

      {# Contact #}
      <div>
        <h3 class="text-xl font-bold mb-4">Contact</h3>
        <a href="tel:{{ site.phoneRaw }}" class="text-spring hover:text-white transition-colors text-lg font-semibold">
          {{ site.phone }}
        </a>
        <p class="text-gray-300 mt-4">
          Serving Orange County, California
        </p>
      </div>
    </div>

    {# Copyright #}
    <div class="border-t border-gray-600 mt-8 pt-8 text-center text-gray-400 text-sm">
      <p>&copy; {% year %} {{ site.name }}. All rights reserved.</p>
    </div>
  </div>
</footer>
