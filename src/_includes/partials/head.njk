<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="robots" content="index, follow">

<title>{{ title }}{% if title %} | {% endif %}{{ site.name }}</title>
<meta name="description" content="{{ description | default(site.description) }}">
<meta name="keywords" content="{{ keywords | default('landscape design, Orange County landscaping, horticulturist, garden design, irrigation systems design, landscape lighting, plant selection, garden consultation') }}">
<meta name="author" content="{{ site.name }}">

{# Canonical URL #}
<link rel="canonical" href="{{ site.url }}{{ page.url }}">

{# Open Graph #}
<meta property="og:title" content="{{ title | default(site.name) }} | {{ site.tagline }}">
<meta property="og:type" content="website">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:description" content="{{ description | default(site.description) }}">
<meta property="og:image" content="{{ site.url }}{{ ogImage | default('/assets/images/og-image.jpg') }}">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<meta property="og:image:alt" content="{{ site.name }} - {{ site.title }}">

{# Twitter Card #}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title | default(site.name) }}">
<meta name="twitter:description" content="{{ description | default(site.description) }}">

{# Theme Color #}
<meta name="theme-color" content="{{ site.theme.color | default('#2C5530') }}">

{# Favicon #}
<link rel="icon" type="image/jpg" href="/assets/images/favicon.jpg">

{# Sitemap #}
<link rel="sitemap" type="application/xml" title="Sitemap" href="{{ site.url }}/sitemap.xml">

{# Font Awesome #}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

{# Web3Forms with hCaptcha #}
<script src="https://web3forms.com/client/script.js" async defer></script>

{# Stylesheet #}
<link rel="stylesheet" href="/assets/css/main.css">

{# Google Analytics #}
{% if site.analytics.ga4 %}
<script async src="https://www.googletagmanager.com/gtag/js?id={{ site.analytics.ga4 }}"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', '{{ site.analytics.ga4 }}');
</script>
{% endif %}
