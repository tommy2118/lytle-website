{# Gnome Game Script #}
<script>
  // JavaScript for "Find the Gnome" Game
  const gameContainer = document.getElementById('game');
  const gameStatus = document.getElementById('game-status');
  let gnomesFound = 0;
  const totalGnomes = 5;

  // Function to randomly position a gnome
  function createGnome() {
    const gnome = document.createElement('div');
    gnome.classList.add('absolute', 'cursor-pointer', 'transition-all', 'duration-300');
    gnome.setAttribute('role', 'button');
    gnome.setAttribute('aria-label', 'Hidden garden gnome');
    gnome.style.width = '50px';
    gnome.style.height = '50px';
    gnome.style.backgroundImage = 'url("/assets/images/gnome.webp")';
    gnome.style.backgroundSize = 'cover';
    gnome.style.top = `${Math.random() * 80 + 10}%`;
    gnome.style.left = `${Math.random() * 80 + 10}%`;
    gnome.style.transform = 'translate(-50%, -50%)';
    gnome.style.opacity = '0.2';

    // Hover effects
    gnome.addEventListener('mouseenter', () => {
      gnome.style.opacity = '1';
      gnome.style.transform = 'translate(-50%, -50%) scale(1.1)';
    });

    gnome.addEventListener('mouseleave', () => {
      gnome.style.opacity = '0.2';
      gnome.style.transform = 'translate(-50%, -50%) scale(1)';
    });

    // Click event for the gnome
    gnome.addEventListener('click', () => {
      gnome.style.transform = 'translate(-50%, -50%) scale(0)';
      setTimeout(() => gnome.remove(), 300);
      gnomesFound++;
      gameStatus.textContent = `Gnomes Found: ${gnomesFound} / ${totalGnomes}`;
      if (gnomesFound === totalGnomes) {
        gameStatus.innerHTML = 'You found all the gnomes! <span class="block text-forest">Great job!</span>';
      }
    });

    gameContainer.appendChild(gnome);
  }

  // Initialize the game
  function initGame() {
    gameStatus.textContent = `Gnomes Found: ${gnomesFound} / ${totalGnomes}`;
    for (let i = 0; i < totalGnomes; i++) {
      createGnome();
    }
  }

  // Start the game when the page loads
  window.onload = initGame;
</script>
